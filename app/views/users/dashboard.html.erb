<h1>Welcome User</h1>
<% if logged_in? %>
  <h1>You are Logged In, <%= current_user.name %></h1>
  <h2><%= current_user.contact %></h2>
  <h2><%= current_user.email %></h2>
  <div>
    <%= link_to "Logout", session_path(:current_user), method: :delete %>
  </div>
<% else %>
  <% redirect_to root_path %>
<% end %>

<div>
  <% Movie.all.each do |movie| %>
      <br>
      <%= @movie = movie.id %>
      <%= movie.title %>
      <%= movie.year %>
      <%= movie.release_date %>
      <%= movie.description %>
    </tr>
    <%= link_to "Review", new_reviews_path(@movie) %>
    <% end %>
</div>