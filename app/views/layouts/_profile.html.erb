<div class="card">
  <div class="fakeimg">
    <%= image_tag(current_user.image, :style=>'width: 100%; height: 50%;') if current_user.image.attached? %>
  </div>
  <h1 class="title"><%= current_user.name %></h1>
  <h4><%= current_user.email %></h4>
  <h4>
    Total reviews: <%= current_user.reviews.count %>
  </h4>
  <h4>
    Watchlist Count: <%= current_user.watchlists.count %>
  </h4>
  <%= link_to "Edit", edit_user_registration_path(current_user) %>
</div>