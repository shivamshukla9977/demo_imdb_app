<%= form_for @movie, multipart: true do |f|%>
  <%= f.label :title%>
  <%= f.text_field :title %><br><br>

  <%= f.label :release_date%>
  <%= f.date_field :release_date %><br><br>

  <%= f.label :play_time %>
  <%= f.time_field :play_time, :format=>"%H:%M" %><br><br>

  <%= f.label :language %>
  <%= f.text_field :language %><br><br>

  <%= f.label :country %>
  <%= f.text_field :country %><br><br>

  <%= f.label :description %>
  <%= f.text_area :description %><br><br>

  <%= f.label :image %>
  <%= f.file_field :image, {:style=>'color:#fff;'} %><br><br>

  <div class="fields">
    <%= f.fields_for :movie_casts do |person| %>
      <%= person.label :movie_casts %>
      <%= person.select(:person_id, option_for_select_member) %>
      <br><br>
      <%= person.label :roles %>
      <%= person.select(:role_id, option_for_select_role) %>
      <%#= render "movie_cast", f: person %>
    <% end %>
    <%= link_to_add_row('Add', f, :movie_casts, :class => "button glyphicon") %>
    <%= link_to "New", new_people_path, :class => "button glyphicon glyphicon-user" %>
  </div>
  <br>
  
  <%= f.fields_for :movie_genres do |genre| %>
    <%= genre.label :genre %>
    <%= genre.select(:genre_id, option_for_select_genre) %>
  <% end %>
  <br><br>
  <%= f.submit :class => "submit" %>
<%end%>