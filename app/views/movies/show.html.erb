<%= stylesheet_link_tag "movies" %>

<% if @movie.errors.full_messages.any? %>
  <% @movie.errors.full_messages.each do |error_message| %>
    <%= error_message if @movie.errors.full_messages.first == error_message %> <br />
  <% end %>
<% end %>

<div class="row">
  <div class="leftcolumn">
    <div class="movie-card">
      <h2 class="title">Title: <%= @movie.title %></h2>
      
      <h5>Release date: <%= @movie.release_date %></h5>
    
      <div class="fakeimg"><%= image_tag(@movie.image, :style=>'width: 70%;') if @movie.image.attached? %></div>
      
      <p><%= @movie.description %></p>
      
      <h4>Cast: 
        <% @movie.movie_casts.each do |cast| %>
          <%= cast.person.name %>
        <% end %>
      </h4>
      
      <h4>Cast: 
        <% @movie.movie_genres.each do |category| %>
          <%= category.genre.title  %>,
        <% end %>
      </h4>
      
      <%= link_to "Review", new_review_path(@movies) %> |
      
      <% if logged_in? %>
        <%= form_for @movie.watchlists.build do |form| %>
          <%= form.hidden_field :user_id, value: current_user.id %>
          <%= form.hidden_field :movie_id %>
          <%= form.submit "Add to Watchlist", {:style=>'color:#000;'} %>
        <% end %>
      <% else %>
        <%= link_to "Add To Watchlist", new_user_registration_path %>
      <% end %>
    </div>
  </div>
