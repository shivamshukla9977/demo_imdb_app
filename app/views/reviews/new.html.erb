
<% if logged_in? %>
  <%= current_user.name %>
  
  
  <%= form_for @review do |form| %>
    <%= form.label :review %>
    <%= form.text_field :comment %>
    <%= form.hidden_field :user_id, :value => current_user.id%>
    <%#= form.hidden_field :movies_id, :value => @movies %>
    <%= form.submit %>
  <% end %>
<% else %>
  <%= controller.redirect_to new_users_path %>
<% end %>