
<% if user_signed_in? %>
  <%= current_user.name %>
  <%= params[:movie_id] %>
  
  <%= form_for @review do |form| %>
    <%= form.label :review %>
    <%= form.text_field :comment %>
    <%= form.hidden_field :user_id, value: current_user.id %>
    <%= form.hidden_field :movie_id, value: params[:movie_id] %>
    <%= form.submit %>
  <% end %>
<% else %>
  <%= controller.redirect_to new_user_path %>
<% end %>